<div id="<%= dom_id order %>">
  <div class="mb-3">
    <% status = ["NEW","PAID","CANCELED"] %>
    <% status_class = { "NEW" => "bg-warning", "PAID" => "bg-success", "CANCELED" => "bg-danger" } %>
    <span class="badge <%= status_class[status[order.status_order]] %> text-white px-3 py-2" style="font-size: 1rem;">
      Status: <%= status[order.status_order] %>
    </span>
  </div>
  <p class="card-text">
    <strong>ðŸ“… Order Date:</strong><br>
    <span class="order-date" data-utc-time="<%= order.created_at.utc.iso8601 %>">
      <%= order.created_at.localtime.strftime('%A, %d %B %Y at %H:%M WIB') %>
    </span>
  </p>
  <p class="card-text">
    <strong>ðŸ“‹ Order Details:</strong><br>
    <%= order.detail %>
  </p>
  <div class="price-display mt-3 pt-3 border-top">
    <span style="font-size: 0.9rem; color: var(--light-text);">Total Price:</span>
    <h5 class="d-inline-block ms-2 mb-0" style="color: var(--primary-color); font-weight: 700;">
      Rp <%= number_with_delimiter(order.total_price.to_i) %>
    </h5>
  </div>
</div>
