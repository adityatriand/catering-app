<p style="color: green"><%= notice %></p>
<div class="page-header mb-4">
  <div class="page-header-content">
    <h1 class="page-title">Categories</h1>
    <div class="page-actions">
      <%= link_to "â† Back to Menu", '/items',  {class: "btn btn-secondary"} %>
      <%= link_to "+ New Category", new_category_path,  {class: "btn btn-success"} %>
    </div>
  </div>
</div>
<div class="mt-3">
  <table class="table table-bordered table-custom">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each_with_index do |category, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= category.name %></td>
          <td>
            <div class="d-flex">
              <%= link_to "edit", edit_category_path(category), {class: "btn btn-info me-3", style: "font-size:10px;" } %>
              <%= button_to "delete", category, method: :delete, class: "btn btn-danger", style: "font-size:10px;" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
